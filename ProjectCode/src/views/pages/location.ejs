<%- include ('../partials/head') %>
<%- include ('../partials/header') %>
<%- include ('../partials/message') %>

<main class="container">
    <h1 style="text-align:center;">Pickup Sites</h1>
    

    <% if (pickup_location.length === 0) { %>
        <p>No locations available D:</p>
    <% } else { %>
    <div id="location" class="row">
        <h2 class="col-12">Available Locations:</h2>
        <% pickup_location.forEach(function(location) { %>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
            <div class="card-body">
                <h3 class="card-title"><%= location.building_name %></h3>
                <p class="card-text"><strong>Area: </strong>Main Campus</p>
                <p class="card-text"><strong>Current Listings:</strong> <%= location.num_listings %></p>
                <a href="/locations/<%= location.location_id %>">View Location</a> <!-- Link to location -->
            </div>
            </div>
        </div>
        <% }); %>
    </div>
    <% } %>
</main>

<%- include ('../partials/footer') %>